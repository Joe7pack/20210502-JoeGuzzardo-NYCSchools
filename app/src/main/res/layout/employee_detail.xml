<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mathScoreDescription"
        android:layout_width="133dp"
        android:layout_height="17dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:text="Math score:"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/mathscore"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/mathScoreDescription"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/readingScoreDescription"
        android:layout_width="133dp"
        android:layout_height="17dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:text="Reading score:"
        app:layout_constraintStart_toStartOf="@+id/mathScoreDescription"
        app:layout_constraintTop_toBottomOf="@+id/mathScoreDescription" />

    <TextView
        android:id="@+id/reading"
        android:layout_width="60dp"
        android:layout_height="22dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/mathscore"
        app:layout_constraintTop_toBottomOf="@+id/mathscore" />

    <TextView
        android:id="@+id/writingScoreDescription"
        android:layout_width="133dp"
        android:layout_height="17dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:text="Writing score:"
        app:layout_constraintStart_toStartOf="@+id/mathScoreDescription"
        app:layout_constraintTop_toBottomOf="@+id/readingScoreDescription" />

    <TextView
        android:id="@+id/writing"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/writingScoreDescription"
        app:layout_constraintTop_toBottomOf="@+id/reading" />

</androidx.constraintlayout.widget.ConstraintLayout>